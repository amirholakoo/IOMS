# ğŸ‘¤ Ø§ÛŒØ¬Ø§Ø¯ Ú©Ø§Ø±Ø¨Ø± ØºÛŒØ± root Ø¨Ø±Ø§ÛŒ Ø§Ù…Ù†ÛŒØª
RUN adduser --disabled-password --gecos '' django && \
