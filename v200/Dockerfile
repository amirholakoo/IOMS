    CMD curl -f http://localhost:8000/ || exit 1

ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "3", "--timeout", "120", "HomayOMS.wsgi:application"] 