# 🌍 Environment Configuration for HomayOMS v200 - Raspberry Pi Production
# 🔧 این فایل برای راه‌اندازی سیستم روی Raspberry Pi طراحی شده است

# 🔐 Django Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-raspberry-pi-2025
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,192.168.1.0/24,192.168.0.0/24

# 🗄️ Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=homayoms_v200_db
DB_USER=homayoms_user
DB_PASSWORD=homayoms_password_raspberry_2025
DATABASE_URL=postgresql://homayoms_user:homayoms_password_raspberry_2025@db:5432/homayoms_v200_db

# 🌐 CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://192.168.1.0/24,http://192.168.0.0/24

# 📧 Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ⏰ Timezone Settings
TIME_ZONE=Asia/Tehran
LANGUAGE_CODE=fa-ir

# 📁 File Settings
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# 🔧 Django Settings
DJANGO_SETTINGS_MODULE=HomayOMS.settings.production
TYPE=production

# 📱 SMS Server Configuration (Raspberry Pi local)
SMS_SERVER_URL=http://host.docker.internal:5003
SMS_API_KEY=ioms_sms_server_2025
SMS_TIMEOUT=30
SMS_RETRY_ATTEMPTS=3
SMS_FALLBACK_TO_FAKE=False

# 🐘 pgAdmin Settings
PGADMIN_DEFAULT_EMAIL=admin@homayoms.com
PGADMIN_DEFAULT_PASSWORD=admin123

# 📊 Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE_PATH=/app/logs

# 🔍 Monitoring
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS=True

# 🌐 Port Configuration
WEB_PORT=8000
DB_PORT=5432
PGADMIN_PORT=5050
NGINX_PORT=80
NGINX_SSL_PORT=443

# 📦 Resource Limits (Raspberry Pi optimized)
# These are set in docker-compose.raspberry.yml
# Web: 1GB memory, 1 CPU
# DB: 512MB memory
# pgAdmin: 256MB memory (optional) 