# 🐳 Dockerfile برای HomayOMS v200 - Raspberry Pi Production
# 🏗️ Optimized for ARM architecture and production deployment

# 📦 Stage 1: Base Python Image for ARM
FROM python:3.11-slim

# 🏷️ Metadata
LABEL maintainer="امیرحسین دربندی <darbandidr99@gmail.com>"
LABEL description="HomayOMS v200 - سیستم مدیریت سفارشات هوما (Raspberry Pi Production)"
LABEL version="v2.0-raspberry"

# 🔧 تنظیم متغیرهای محیط
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    DJANGO_SETTINGS_MODULE=HomayOMS.settings.production \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# 📁 ایجاد دایرکتوری کاری
WORKDIR /app

# 🔧 نصب وابستگی‌های سیستم (optimized for ARM)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    postgresql-client \
    curl \
    gettext \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# 📦 کپی requirements.txt و نصب وابستگی‌های Python
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# 📁 کپی کد پروژه
COPY . .

# 🎯 Entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# 👤 ایجاد کاربر غیر root برای امنیت
RUN adduser --disabled-password --gecos '' django && \
    chown -R django:django /app

# 📁 ایجاد دایرکتوری‌های مورد نیاز
RUN mkdir -p /app/logs /app/staticfiles /app/media && \
    chown -R django:django /app/logs /app/staticfiles /app/media

# 🔧 تنظیم مجوزهای فایل
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# 👤 تغییر به کاربر django
USER django

# 🌐 Expose پورت
EXPOSE 8000

# 🚀 Health check (optimized for Raspberry Pi)
HEALTHCHECK --interval=60s --timeout=30s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health/ || exit 1

ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "2", "--timeout", "120", "--worker-class", "sync", "--max-requests", "1000", "--max-requests-jitter", "100", "HomayOMS.wsgi:application"] 