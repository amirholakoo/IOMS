# 🐳 متغیرهای محیطی HomayOMS v200 - Production
# 📋 تنظیمات برای سرور تولید

# 🔐 تنظیمات امنیتی Django
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=False
ALLOWED_HOSTS=homayoms.com,www.homayoms.com,localhost,127.0.0.1

# 🗄️ تنظیمات پایگاه داده PostgreSQL (تولید)
DB_HOST=db
DB_PORT=5432
DB_NAME=homayoms_production_db
DB_USER=homayoms_production_user
DB_PASSWORD=your-secure-production-password
DATABASE_URL=postgresql://homayoms_production_user:your-secure-production-password@db:5432/homayoms_production_db

# 🌐 تنظیمات CORS
CORS_ALLOWED_ORIGINS=https://homayoms.com,https://www.homayoms.com

# 📧 تنظیمات ایمیل (SMTP واقعی)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-production-app-password

# ⏰ تنظیمات timezone
TIME_ZONE=Asia/Tehran
LANGUAGE_CODE=fa-ir

# 📁 تنظیمات فایل‌ها
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# 🔧 تنظیمات Django
DJANGO_SETTINGS_MODULE=HomayOMS.settings.production
TYPE=production

# 📱 تنظیمات SMS Server (تولید)
SMS_SERVER_URL=http://192.168.1.60:5003
SMS_API_KEY=ioms_sms_server_2025
SMS_TIMEOUT=30
SMS_RETRY_ATTEMPTS=3
SMS_FALLBACK_TO_FAKE=False

# 📊 تنظیمات لاگ‌گیری و مانیتورینگ
LOG_LEVEL=WARNING
LOG_FILE_PATH=/app/logs
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS=True

# 🐘 تنظیمات pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@homayoms.com
PGADMIN_DEFAULT_PASSWORD=your-secure-pgadmin-password 